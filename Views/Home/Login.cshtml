@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab&display=swap" rel="stylesheet">
    <title>Document</title>
    <style>
        .formTwo{
            border: 2px solid lightgrey;
            padding-top: 50px;
            padding-right: 30px;
            padding-left: 30px;
            height: 300px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 my-2">
                <p>Click here to register<a href="/"> Register</a></p>
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="row my-0">
            <div class="col-md-2"></div>
            <div class="col-md-6 formTwo">
                <form asp-action="LoginProcess" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input class="form-control" type="text" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input class="form-control" type="Password" asp-for="Password">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                <div>
                    <span asp-validation-for="Email"></span><br>
                    <span asp-validation-for="Password"></span><br>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</body>
</html>