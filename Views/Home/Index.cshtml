@model User

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab&display=swap" rel="stylesheet">
    <title>UserInfo</title>
    <style>
        .formOne{
            border: 2px solid lightgrey;
            padding-top: 50px;
            padding-right: 30px;
            padding-left: 30px;
            border-radius: 10px;
            height: 550px;
        }
        .content-header > h3{
            font-weight: lighter;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h3 class="display-1 m-0">BarCode</h3>
        <p class="lead">The World's Largest Website</p>
        
        <nav class="navbar navbar-expand-md bg-light my-2">
            <a class="navbar-brand" href="#">BCode</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contacts</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Research</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Careers</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8 my-2 content-header">
                <p>Already Signed up? Login here <a href="/login"> Login</a></p>
                <h3>Register to get started</h3>
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6 formOne">
                <form asp-action="Create" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input class="form-control" type="text" asp-for="FirstName">
                    </div>
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input class="form-control" type="text" asp-for="LastName">
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input class="form-control" type="text" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input class="form-control" type="Password" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Confirm Password</label>
                        <input class="form-control" type="Password" asp-for="ConfirmPassword">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                <div>
                    <span asp-validation-for="FirstName"></span><br>
                    <span asp-validation-for="LastName"></span><br>
                    <span asp-validation-for="Email"></span><br>
                    <span asp-validation-for="Password"></span><br>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div> 
    </div>
</body>
</html>