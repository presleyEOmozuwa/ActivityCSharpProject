@model Game

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab&display=swap" rel="stylesheet">
    <title>UserInfo</title>
    <style>
        .formSix{
            border: 2px solid lightgrey;
            padding-top: 50px;
            padding-right: 30px;
            padding-left: 30px;
            border-radius: 10px;
            height: 520px;
        }
        h3{
            font-weight: lighter;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 my-2">
                <h3> Create New Activity</h3>
                <p>Customizing your own values</p>
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6 formSix">
                <form asp-action="Create" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label for="Title">Title</label>
                        <input class="form-control"  asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label for="GameDate">Date</label>
                        <input class="form-control" asp-for="GameDate">
                    </div>
                    <div class="form-group">
                        <label for="Time">Time</label>
                        <input class="form-control" asp-for="Time">
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                <div>
                    <span asp-validation-for="Title"></span><br>
                    <span asp-validation-for="GameDate"></span><br>
                    <span asp-validation-for="Time"></span><br>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-md-4"></div>
        </div> 
    </div>
</body>
</html>